<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/transparent"></solid>

            <stroke android:width="1dp" android:color="@color/transparent" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1.5dip" android:color="@color/transparent" />
            <solid android:color="@color/transparent"></solid>
            <padding android:bottom="5dp" android:left="10dp"
                android:right="10dp" android:top="5dp"></padding>
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>